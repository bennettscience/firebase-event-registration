{
  "rules": {
    "courses": {
      ".read": "auth != null",
      "$courseId": {
        "members": {
          "$uid": {
            ".validate": "root.child('courses').child($courseId).child('code').val() == newData.child('code').val()",
            ".write": "auth != null"
          }
        }
      }
    },
    "users": {
      "$userId": {
        "regs": {
          ".read": "(auth != null && auth.uid == $userId)",
          ".write": "(auth != null && auth.uid == $userId)"
        },
        "device_ids": {
          ".read": "(auth != null && auth.uid == $userId)",
          ".write": "(auth != null && auth.uid == $userId)"
        }
      }
    }
  }
}
